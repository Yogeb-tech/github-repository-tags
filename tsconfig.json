{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2024",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*", "src/tests"],
  "exclude": ["node_modules", "dist", "tests/**/*", "**/*.test.ts"]
}
